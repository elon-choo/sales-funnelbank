# 세퍼마 LMS 환경변수 템플릿
# .env.local 파일로 복사하여 사용
# cp .env.example .env.local

# ============================================================
# 필수 환경변수 (Required)
# ============================================================

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-api03-...

# ============================================================
# 선택 환경변수 (Optional)
# ============================================================

# AI 모델 설정
AI_DEFAULT_MODEL=claude-sonnet-4-20250514
AI_PREMIUM_MODEL=claude-opus-4-5-20251101
AI_MONTHLY_BUDGET_USD=800

# Cron 작업 보안 (피드백 처리용)
# 임의의 문자열 생성: openssl rand -hex 32
CRON_SECRET_FEEDBACK=your-cron-secret-here

# Supabase Edge Function URL
SUPABASE_EDGE_FUNCTION_URL=https://your-project.supabase.co/functions/v1

# 앱 URL (프로덕션)
NEXT_PUBLIC_APP_URL=https://your-domain.com

# ============================================================
# 이메일 설정 (선택)
# ============================================================

# Gmail 사용 시
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com

# ============================================================
# 에러 모니터링 - Sentry (선택)
# ============================================================

# Sentry DSN (프로젝트 설정에서 복사)
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Sentry 소스맵 업로드 (CI/CD용)
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=your-project-slug
SENTRY_AUTH_TOKEN=sntrys_xxx

